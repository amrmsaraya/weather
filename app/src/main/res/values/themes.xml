<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Weather" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorAccent">@color/secondary</item>
    </style>

    <style name="Theme.Weather.Starting" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.Weather</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/secondary</item>
    </style>

    <style name="Dialog1" parent="Theme.AppCompat.DayNight.Dialog">
